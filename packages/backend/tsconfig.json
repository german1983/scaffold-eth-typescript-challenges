{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "es2017",
            "esnext.asynciterable"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "sourceMap": true,
        "allowJs": false,
        "declarationMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNEXT",
        "moduleResolution": "node",
        "incremental": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "isolatedModules": false,
        "noEmit": true,
        "rootDir": ".",
        "baseUrl": ".",
        "outDir": "./build",
        "emitDecoratorMetadata": true,
        "pretty": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "tests"
    ]
}